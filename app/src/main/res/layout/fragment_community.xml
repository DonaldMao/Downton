<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context="com.cndownton.app.downton.main.community.CommunityFragment"
              android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_community"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:titleTextColor="@android:color/white"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ToolbarPopupTheme">
            <TextView
                android:id="@+id/title_toolbar_community"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="社区"
                android:textSize="24sp"
                android:textColor="@color/white_primary_text_1.0"
                />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <im.delight.android.webview.AdvancedWebView
        android:id="@+id/wv_community"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </im.delight.android.webview.AdvancedWebView>
</LinearLayout>
