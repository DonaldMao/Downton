<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cndownton.app.downton.customer.setting.SettingActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_setting"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sl_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#eee"
            >
            <LinearLayout
                android:background="@drawable/bg_view_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="账号:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="123456789"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="微信:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入微信号"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="邮箱:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入电子邮箱"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="昵称:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入电子邮箱"
                    android:text="赑屃"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="性别:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/ms_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"/>


            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="生日:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="1980-01-01"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />



            </LinearLayout>

            <LinearLayout
                android:background="@drawable/bg_view_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="地址:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="点击选择地区"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:paddingStart="8dp"
                android:background="@drawable/bg_view_setting"
                android:hint="具体地址"
                />
            <LinearLayout
                android:background="@drawable/bg_view_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="固话:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入联系电话"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="QQ:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入QQ"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_button_confirm"
                android:text="确认修改"
                android:textSize="18sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
